<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardMaxElevation="6dp"
        card_view:cardElevation="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/iv_banner"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">
            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4sp"
                    android:textColor="#262629"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:typeface="normal"
                    android:textAlignment="viewStart"
                    android:letterSpacing="0.05" android:maxLines="2"
            android:layout_marginBottom="8dp"/>

            <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#262629"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:typeface="normal"
                    android:textAlignment="viewStart"
                    android:letterSpacing="0.05" android:maxLines="2" android:lineSpacingExtra="4sp"/>

            <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 hours ago" android:fontFamily="@font/roboto" android:textSize="12sp"
                    android:textColor="#8F939C"
                    android:lineSpacingExtra="9.33sp"
                    android:letterSpacing="0.06"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>